{
  "compilerOptions": {
    "target": "ES2024",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@types-internal/*": ["src/types/*"],
      "@testrail-api/*": ["src/testrail-api/*"],
      "@reporter/*": ["src/reporter/*"],
      "@utils/*": ["src/utils/*"],
      "@logger": ["src/utils/logger.ts"],
      "@utils/logger": ["@logger"]
    },
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib", "src/debug.ts"]
}
